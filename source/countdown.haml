!!!
%html{lang: "zh-tw", class: "han-la"}
  %head
    %meta{charset: "utf-8"}

    = partial "partials/ece_acsii"

    %meta{name: "viewport", content: "width=device-width, initial-scale=1.0, user-scalable=no"}
    -# Always force latest IE rendering engine or request Chrome Frame
    %meta{content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

    -# Use title if it's in the page YAML frontmatter
    %title= current_page.data.title ? current_page.data.title + data.config.siteTitleSuffix : data.config.siteTitle
    = # favicon_tag 'images/favicon.png'
    %meta{name: "description", content: current_page.data.description || data.config.siteDescription}
    %meta{name: "keywords", content: current_page.data.keywords || data.config.siteKeywords}
    %meta{name: "og:title", content: current_page.data.title || data.config.siteTitle}
    %meta{name: "og:site_name", content: data.config.siteName}
    %meta{name: "og:image", content: current_page.data.og_image || data.config.siteOgImage}

    = stylesheet_link_tag "all"

    = partial "partials/justfont"
    = javascript_include_tag "modernizr"

    :scss

      body {
        overflow: hidden;
        height: 100%;
      }

      .page {
        overflow: hidden;
        height: 100%;
      }
      
      .cd .animation {
        position: relative;
        background-color: #f7f3ea;
        .background {
          opacity: 0;
        }
        .animation {
          position: absolute; 
          opacity: .5; 
          width: 94%;
          left: 3%;
          left: 1;
          top: -5.45%;

          img {
            position: relative;
            z-index: 100;
          }
        }
        .animation::after {
          z-index: 10;
          content: " ";
          position: absolute;
          width: 99999px;
          height: 99999px;
          top: -9999px;
          left: -9999px;
          background-color: white;
        }
      }

  %body{class: page_classes}
    .page{:style => "overflow: hidden; background-color: #f7f3ea;"}
      .container
        %header
        %section.cd.vertical-rhythm
          OH hi.
          .animation
            .background= image_tag "ece/ECE_theme.jpg"
            .animation= image_tag "ece/ECE_animated.gif", :style => "max-width: none; width: 100%;"
    .preload
      = image_tag "ece/ECE_theme.jpg", :class => "preload", :style => "opacity: 0; position: absolute; top: 0; left:0;"
      = image_tag "ece/ECE_animated.gif", :class => "preload", :style => "opacity: 0; position: absolute; top: 0; left:0;"
    = javascript_include_tag "all"
    = auto_javascript_include_tag

    :coffee
      cmh = $(window).height()
      $('.cd').css 'min-height', cmh
      # $(window).load ->
      console.log 'Yo!'
      $('.preload').html('')

    -# Google Analysis
    = partial "partials/GA"
