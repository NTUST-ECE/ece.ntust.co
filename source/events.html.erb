---
pageable: true
---

<div class="timeline-articles auto-label">
<% page_articles.each do |article| %>
  <article class="article">
    <a href="<%= article.url %>">
      <h1 class="title"><%= article.title %></h1>
    </a>
      <time class="date" datetime="<%= article.date.strftime('%Y-%m-%d') %>"><%= article.date.strftime('%Y/%m/%d') %></time>
	<div class="content" style="margin-top:-30px;">
    	  <p style="text-align:left;"><%= article.summary %></p>
	  <div style="text-align:right;"><a href="<%= article.url %>">Read more...</a></div>
      </div>
  </article>
<% end %>
</div>
