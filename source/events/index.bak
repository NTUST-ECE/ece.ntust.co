---
pageable: true
per_page: 5
---
<% page_articles.each do |article| %>
  <article>
    <h2>
      <a href="<%= article.url %>" style="color: #0B4C5F;"><%= article.title %></a>
    </h2>
	<time style="color:#6E6E6E;"><%= article.date.strftime('%b %e %Y') %></time>
	<h5>
	<div class="content">
	<% require 'sanitize' %>
    	<p><%= Sanitize.fragment(article.summary, Sanitize::Config::BASIC) %></p>
	</div>
    <a href="<%= article.url %>" style="float:right;">Read more</a>
	<hr>
  </article>
<% end %>
	<br><br>
	<%= link_to "Prev page", prev_page.url if prev_page %>
	<!--
	<p>
		<% (1..num_pages).each do |i| %>	
		<%= i %>
		<% end %>
	</p>
	-->
	<%= link_to "Next page", next_page.url if next_page %>
	<br><br>
